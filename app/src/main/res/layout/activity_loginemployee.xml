<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B69D74"
    android:orientation="vertical"
    tools:context=".loginemployeeActivity">

    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:background="#70FFFFFF"
        android:text="Boss Notes"
        android:textColor="#8F000000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:fontFamily="serif-monospace" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="#5B915E5E"
        android:text="Please Log In with Your Assigned Account"
        android:textColor="#8F000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="#97D58411"
        android:text='"Employee Account"'
        android:textColor="#CB2E2C2C"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:text="Email"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="Password"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button8"
        android:layout_width="320dp"
        android:layout_marginTop="10sp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:background="#C97C07"
        android:text="RegIster"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="#C97C07"
        android:onClick="login"
        android:text="Log In"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:text="If you have a trouble with signing in\nplease call our customer service \n444-56-XXX"
        android:textSize="18sp" />
</LinearLayout>